

# Reload 
super + r
  pkill -USR1 -x sxhkd && bspc wm -r


# Polybar
super + p
  pgrep -x polybar && killall -q polybar || polybar mybar &


# Launch terminal
super + Return
  /usr/local/bin/st


# Close window
super + BackSpace
  bspc node -c


# Application launcher
super + a
  rofi -show drun -theme ~/.config/rofi/config.rasi


# Switch workspace
super + {1-9}
  bspc desktop -f ^{1-9}


# Put focused window to different workspace
super + shift + {1-9}
  bspc node -d ^{1-9}
  
  
# Toggle floating
super + shift + space
  bspc node -t $(bspc query -n focused -T | jq -r '.client.state' | grep floating >/dev/null && echo tiled || echo floating)


# Toggle Fullscreen
super + f
  bspc node -t ~fullscreen


super + l
    sh -c 'pgrep -f lemonbar >/dev/null && pkill -x lemonbar || (nohup ~/.config/lemonbar/loop.sh >/dev/null 2>&1 &)'


# Brightness Controls
XF86MonBrightnessUp
  brightnessctl set +2%


XF86MonBrightnessDown
  brightnessctl set 2%-


# Raise Volume
XF86AudioRaiseVolume
  amixer -q sset Master 5%+

# Lower Volume
XF86AudioLowerVolume
  amixer -q sset Master 5%-

# Toggle Mute
XF86AudioMute
  amixer -q sset Master toggle


super + s
  maim -i root ~/Pictures/Screenshots/$(date +"%Y%m%d-%H%M%S").png
